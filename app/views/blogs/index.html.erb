<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p id="notice"><%= notice %></p>

    <h1>Listing Blogs</h1>

    <table>
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>Title</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @blogs.each do |blog| %>
          <tr>
            <td><%= blog.user.name %></td>
            <td><%= blog.title %></td>
            <td><%= blog.content %></td>
            <td><%= link_to '閲覧', blog, class:'btn btn-default btn-sm' %></td>
            <td><%= link_to '編集', edit_blog_path(blog), class:'btn btn-default btn-sm btn-success' %></td>
            <td><%= link_to '削除', blog, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default btn-sm btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'ブログを新規作成する', new_blog_path, class:'btn btn-default btn-sm'  %>
  </div>
</div>
